<UserControl x:Class="CalendarList.DayItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalendarList"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="button" RenderTransformOrigin="0.5,0.5" Click="button_Click">
            <Button.Background>
                <ImageBrush x:Name="ImgBrush" ImageSource="https://cdn0.iconfinder.com/data/icons/modern-ui-1/64/dots-horizontal-nav-more-512.png" Stretch="UniformToFill"></ImageBrush>
            </Button.Background>
        </Button>
        <TextBlock x:Name="Day" Grid.Row="1" Text="Day" TextAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
